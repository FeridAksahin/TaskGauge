<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Join/Create Room Form</title>
    <style>
        body {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
            background-color: #f8f9fa;
        }

        .card {
            max-width: 400px;
            margin: auto;
            border: 2px solid #343a40;
            border-radius: 15px;
            overflow: hidden;
        }

        .card-header {
            background-color: #343a40;
            color: white;
            text-align: center;
            padding: 15px;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .btn-link {
            color: #343a40;
        }

        .btn-link:hover {
            text-decoration: underline;
        }
    </style>
</head>

<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12">
                <div class="card" id="roomCard">
                    <div class="card-header">
                        <h3>Join Room</h3>
                    </div>
                    <div class="card-body">
                        <form id="joinRoomForm">
                            <div class="form-group">
                                <input type="text" class="form-control" id="roomName" placeholder="Enter Room Name" required>
                            </div>
                            <button type="button" class="btn btn-success btn-block" onclick="joinRoom()">Join Room</button>
                        </form>
                        <div class="mt-3 text-center">
                            <span>or</span>
                        </div>
                        <button type="button" class="btn btn-primary btn-block mt-3" onclick="showForm('createRoomForm')">Create Room</button>
                    </div>
                </div>

                <div class="card" id="createRoomCard" style="display: none;">
                    <div class="card-header">
                        <h3>Create Room</h3>
                    </div>
                    <div class="card-body">
                        <form id="createRoomForm">
                            <div class="form-group">
                                <input type="text" class="form-control" id="newRoomName" placeholder="Enter Room Name" required>
                            </div>
                            <button type="button" class="btn btn-primary btn-block" onclick="createRoom()">Create Room</button>
                        </form>
                        <div class="mt-3 text-center">
                            <span>or</span>
                        </div>
                        <button type="button" class="btn btn-success btn-block mt-3" onclick="showForm('joinRoomForm')">Join Room</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function showForm(formId) {
            if (formId === 'joinRoomForm') {
                document.getElementById("roomCard").style.display = "block";
                document.getElementById("createRoomCard").style.display = "none";
            } else if (formId === 'createRoomForm') {
                document.getElementById("roomCard").style.display = "none";
                document.getElementById("createRoomCard").style.display = "block";
            }
        }

        function joinRoom() {
            var roomName = document.getElementById("roomName").value;
            // Implement the logic to join the room here
            console.log("Joining room: " + roomName);
        }

        function createRoom() {
            var newRoomName = document.getElementById("newRoomName").value;
            // Implement the logic to create the room here
            console.log("Creating room: " + newRoomName);
        }
    </script>

</body>

</html>
